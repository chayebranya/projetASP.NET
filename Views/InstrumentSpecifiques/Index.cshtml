@model IEnumerable<VegeMoteur.App.Database.InstrumentSpecifique>

@{
    ViewBag.Title = "Index";
}

<h4>Instruments Specifiques</h4>

<p>
	<a href="@Url.Action("Create")" class="btn btn-outline-primary"><i class="fas fa-plus-circle"></i> Create New</a>
</p>
<table class="table table-hover display">
<thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precision)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Resolution)
        </th>
        <th>
            Freq. Calibrage
        </th>
		<th>
			Freq. Etallonage
		</th>
        <th>
            Date
        </th>
        <th>
            Inst. General
        </th>
        <th>
            Marque
        </th>
       
        <th>
            Poste de Travail
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precision)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Resolution)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FrequenceCalibrage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FrequenceEtallonage)
        </td>
        <td>
            @item.DateMiseEnService.Value.ToString("yyy-MM-dd")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InstrumentGeneral.Designation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marque.Nom)
        </td>
      
        <td>
            @Html.DisplayFor(modelItem => item.PosteTravail.Nom)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</tbody>
</table>
