@model IEnumerable<VegeMoteur.App.Database.InstrumentGeneral>

@{
    ViewBag.Title = "Index";
}

<h4>Instruments Generaux</h4>

<p>
	<a href="@Url.Action("Create")" class="btn btn-outline-primary"><i class="fas fa-plus-circle"></i> Create New</a>
</p>
<table class="table table-hover display">
<thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodeInterne)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Designation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AEtendu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CodeInterne)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Designation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AEtendu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</tbody>
</table>
