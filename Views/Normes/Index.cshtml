@model IEnumerable<VegeMoteur.App.Database.Norme>

@{
    ViewBag.Title = "Index";
}

<h4>Norme List</h4>

<p>
	<a href="@Url.Action("Create")" class="btn btn-outline-primary"><i class="fas fa-plus-circle"></i> Create New</a>
</p>
<table class="table table-hover display">
<thead>
    <tr>
        <th>
            Code Norme
        </th>
        <th>
            Nombre Position
        </th>
        <th>
            Actuelle
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.InstrumentSpecifique.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombrePosition)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Actuelle)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</tbody>
</table>
